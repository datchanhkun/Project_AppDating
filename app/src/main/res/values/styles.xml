<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <!-- Màu của radio button       -->
        <item name="colorAccent">#F44336</item>
        <!--  màu mặc định của radio      -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <!--    Main layout -->

    <!--style Button Actions-->
    <style name="ButtonActionStyle_Main">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <!--    Main Layout-->

<!--    setting profile -->

    <!--style editText-->
    <style name="EditTextStyle_Profile">
        <item name="android:background">@drawable/edit_text_design</item>
        <item name="android:padding">13dp</item>
        <item name="android:layout_width">315dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:ems">10</item>
    </style>

    <!--style Button Actions-->
    <style name="ButtonActionStyle_Profile">
        <item name="android:layout_width">315dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>

    </style>

<!--    end setting profile-->

</resources>
